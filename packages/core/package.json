{
  "name": "@supergrowthai/next-blog",
  "version": "2.0.0-beta.2",
  "description": "Add blogging to your nextjs project in a jiffy",
  "repository": "https://github.com/captadexp/next-blog",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist && mkdir -p dist/core",
    "dev": "npm run clean && vite build --watch",
    "build": "npm run clean && vite build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nextjs",
    "react",
    "cms",
    "blogging",
    "headless-cms",
    "next-js",
    "secure"
  ],
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "default": "./dist/adapters/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": null
    },
    "./package.json": "./package.json"
  },
  "author": "Capt ADExp <tech@developer.toys>",
  "license": "ISC",
  "dependencies": {
    "moment": "^2.30.1"
  },
  "optionalDependencies": {
    "mongodb": "^6.15.0",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "next": "^15.2.4"
  },
  "devDependencies": {
    "@supergrowthai/next-blog-dashboard": "workspace:*",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^22.13.14",
    "@types/uuid": "^9.0.8",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.5.3"
  }
}