{
  "name": "@supergrowthai/next-blog",
  "version": "1.0.13",
  "description": "Add blogging to your nextjs project in a jiffy",
  "repository": "https://github.com/captadexp/next-blog",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist/core dist/static",
    "dev": "npm run clean && npm run dev:server & npm run dev:client",
    "dev:server": "vite build --watch",
    "dev:client": "vite build --config vite.client.config.ts --watch",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "build:server": "vite build",
    "build:client": "vite build --config vite.client.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nextjs",
    "react",
    "cms",
    "blogging",
    "headless-cms",
    "next-js",
    "secure"
  ],
  "files": [
    "dist",
    "dist/static"
  ],
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./adapters": {
      "types": "./dist/core/adapters/index.d.ts",
      "default": "./dist/core/adapters/index.js"
    },
    "./ui": {
      "types": "./dist/core/ui/index.d.ts",
      "default": "./dist/core/ui/index.js"
    },
    "./types": {
      "types": "./dist/core/types.d.ts",
      "default": null
    },
    "./package.json": "./package.json"
  },
  "author": "Capt ADExp <tech@developer.toys>",
  "license": "ISC",
  "dependencies": {
    "moment": "^2.30.1",
    "preact": "^10.26.4",
    "preact-render-to-string": "^6.5.13",
    "preact-iso": "^2.9.1"
  },
  "optionalDependencies": {
    "mongodb": "^6.15.0",
    "uuid": "^11.1.0"
  },
  "peerDependencies": {
    "next": "^15.2.4"
  },
  "devDependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/uuid": "^9.0.8",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vite-plugin-dts": "^4.5.3"
  }
}